<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormStudent">

    <EditText
        android:id="@+id/form_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/form_clazz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:hint="Lop hoc"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/form_name"
        app:layout_constraintStart_toStartOf="@+id/form_name"
        app:layout_constraintTop_toBottomOf="@+id/form_name" />

    <EditText
        android:id="@+id/form_diem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:hint="Diem"
        android:inputType="numberDecimal"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/form_clazz"
        app:layout_constraintStart_toStartOf="@+id/form_clazz"
        app:layout_constraintTop_toBottomOf="@+id/form_clazz" />

    <Button
        android:id="@+id/form_btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_bg_success"
        android:text="save"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/form_diem"
        app:layout_constraintStart_toStartOf="@+id/form_diem"
        app:layout_constraintTop_toBottomOf="@+id/form_diem" />
</androidx.constraintlayout.widget.ConstraintLayout>